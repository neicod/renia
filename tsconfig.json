{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "*"],
      "@renia/framework/*": ["app/modules/renia/framework/*"],
      "@renia/framework/api": ["app/modules/renia/framework/api/index.ts"],
      "@renia/framework/api/*": ["app/modules/renia/framework/api/*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["app/entry", "app/modules", "generated"]
}
